        local function createColorInput(label, value)
            local inputFrame = Instance.new("Frame")
            inputFrame.Size = UDim2.new(0, 36, 1, 0)
            inputFrame.BackgroundTransparency = 1
            inputFrame.Parent = inputContainer
            
